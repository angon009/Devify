@model SalesViewModel
@{
    ViewData["Title"] = "Sales Report";
}

<div class="card mb-4">
    <div class="card-header bg-warning" style="height:150px">
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xl col-lg flex-grow-0" style="flex-basis:230px">
                <div class="img-thumbnail shadow w-100 bg-white position-relative text-center" style="height:190px; width:200px; margin-top:-120px">
                    @{
                        if (ViewBag.Store.LogoUrl != null)
                        {
                            <img src="@Model.BaseUrl@ViewBag.Store.LogoUrl" class="center-xy img-fluid" alt="Logo Brand">
                        }
                        else
                        {
                            <img src="" class="center-xy img-fluid" alt="No Logo">
                        }
                    }
                </div>
            </div> <!--  col.// -->
            <div class="col-xl col-lg">
                <h3>@ViewBag.Store.StoreName</h3>
                <p>@ViewBag.Store.RoadNo, @ViewBag.Store.Thana, @ViewBag.Store.District, @ViewBag.Store.Division</p>
            </div> <!--  col.// -->
            <div class="col-xl-4 text-md-end">
                <form asp-action="GetSales" asp-controller="Sales" method="post">
                    <input asp-for="FromDate" hidden/>
                    <input asp-for="ToDate" hidden/>
                    <input type="submit" class="btn btn-outline-primary" value="View More" />  <i class="material-icons md-launch"></i>
                </form>
            </div> <!--  col.// -->
        </div> <!-- card-body.// -->
        <hr class="my-4">
        <div class="row g-4">
            <div class="col-md-12 col-lg-4 col-xl-2">
                <article class="box">
                    <p class="mb-0 text-muted">Total sales:</p>
                    <h5 class="text-success">@Model.TotalSale</h5>
                    <p class="mb-0 text-muted">Revenue:</p>
                    <h5 class="text-success mb-0">$@Model.Revenue</h5>
                    <p class="mb-0 text-muted">Total Profit:</p>
                    <h5 class="text-success mb-0">@string.Format("${0}", Model.Revenue-Model.TotalCostAmount)</h5>
                </article>
            </div> <!--  col.// -->
            <div class="col-sm-6 col-lg-4 col-xl-3">
                <h6>Contacts</h6>
                <p>
                    @ViewBag.Store.Email <br>
                    @ViewBag.Store.Phone
                </p>
            </div> <!--  col.// -->
            <div class="col-sm-6 col-lg-4 col-xl-3">
                <h6>Address</h6>
                <p>
                    Division: @ViewBag.Store.Division <br>
                    District: @ViewBag.Store.District <br>
                    Thana: @ViewBag.Store.Thana <br />
                    Road No.: @ViewBag.Store.RoadNo <br />
               @*     Postal code: @ViewBag.Store.post*@
                </p>
            </div> <!--  col.// -->
        </div> <!--  row.// -->
    </div> <!--  card-body.// -->
</div>
