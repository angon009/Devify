@{
    ViewData["Title"] = "PaymentConfirmed";
    Layout = null;
}
<link href="~/StoreAdminTheme/css/responsivef9e3.css?v=1.1" rel="stylesheet" />
<link href="~/StoreAdminTheme/css/bootstrapf9e3.css?v=1.1" rel="stylesheet" type="text/css" />
<div class="card text-center">
    <div class="card-header bg-success"><h1>Payment Confirmed</h1></div>
    <div class="card-body">
        <div>
            Transaction Id : <span>@ViewBag.TransactionId</span>
        </div>
        <div>
            Amount : <span>@ViewBag.TotalPrice</span>
        </div> 
    </div>
    <div class="card-footer">
        @{
            if (ViewBag.Error != null)
            {
                <span>ViewBag.Error</span>
            }
        }
        <a class="btn btn-danger rounded" href="#" onclick="close_window();return false;">close</a>
    </div>
</div>

<script>
    function close_window() {
        close();
    }
</script>
