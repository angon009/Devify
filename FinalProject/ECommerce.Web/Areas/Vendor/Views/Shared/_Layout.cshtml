                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a asp-action="Index" asp-controller="Message" class="dropdown-item dropdown-footer">See All Messages</a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link btn-icon" href="#"> <i class="material-icons md-notifications_active"></i> </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> English </a>
                    </li>

                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#">
                            <img class="rounded-circle" src=@string.Format("{0}{1}","/Profile/images/people/",(AppUser.Image!=null)?AppUser.Image:"avatar.jpg") width="40" height="40">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">@AppUser.FirstName</a>
                            <a class="dropdown-item" asp-action="Index" asp-controller="Manage" asp-area="Profile">Settings</a>
                            <a class="dropdown-item" asp-action="stores" asp-controller="Dashboard">Switch Store</a>
                            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout"
                                  asp-route-returnUrl="@Url.Action("Logout", "Account", new { area = "" })">
                                <button type="submit" class="dropdown-item text-danger">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

        <section class="content-main">

            <div class="content-header">
                <h2 class="content-title">@ViewData["PageNav"]</h2>
            </div>

            <partial name="_ResponsePartial" />

            @RenderBody()








        </section> <!-- content-main end// -->
    </main>


