@model CategoryCreateViewModel
@{
    ViewData["Title"] = "Edit Category";
    ViewData["PageNav"] = "Edit Category";
}

<form asp-action="Edit" method="post" asp-antiforgery="true">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5 class="text-center">Update Category Form</h5>
            </div>
            <div class="card-body">

                <input asp-for="StoreId" hidden/>
                <input asp-for="Id" hidden />

                <div class="form-group row">
                    <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="CategoryName" />
                        <span class="text-danger" asp-validation-for="CategoryName"></span>
                    </div>
                </div>

                

                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <h5 class="text-center"><input type="submit" value="Update" class="btn btn-primary rounded" /></h5>
            </div>
        </div>
    </div>
</form>


