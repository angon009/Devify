@model SubCategoryCreateModel
@{
    ViewData["Title"] = "Add New Sub-Category";
    ViewData["PageNav"] = "Add New Sub-Category";
}

<form asp-action="Create" method="post" asp-antiforgery="true">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5 class="text-center">New Sub-category Form</h5>
            </div>
            <div class="card-body">

                <div class="form-group row">
                    <label asp-for="SubCategoryName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="SubCategoryName" />
                    </div>
                </div>
                
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <h5 class="text-center"><input type="submit" value="Add Sub-Category" class="btn btn-primary rounded" /></h5>
            </div>
        </div>
    </div>
</form>
